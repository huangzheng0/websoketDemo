            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.jrtech.android.widget.mNote.MNoteOptionalMenu
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:image="@drawable/btn_mnote_menu_sort_az"
                app:optionalEnbale="false"
                app:title="@string/mnote_menu_sort_ascending_by_column_A"/>
            <View style="@style/mnote_menu_divider_line"/>
            <com.jrtech.android.widget.mNote.MNoteOptionalMenu
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
