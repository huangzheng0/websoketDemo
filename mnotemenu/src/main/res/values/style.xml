<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="mnote_image_btn">
        <item name="android:clickable">true</item>
        <item name="android:layout_width">30dip</item>
        <item name="android:layout_height">30dip</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="mnote_menu_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:paddingTop">7dip</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:paddingBottom">7dip</item>
        <item name="android:textColor">#6D6D72</item>
    </style>

    <style name="mnote_menu_card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:background">#ffffffff</item>
    </style>
    
    <style name="mnote_menu_divider_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.7dip</item>
        <item name="android:background">#F6F3F2</item>
    </style>
</resources>